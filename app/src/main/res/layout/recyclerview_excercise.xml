<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"></LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:elevation="12dp"
                android:id="@+id/cardViewAva1"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:layout_margin="@dimen/TextWorldTime"

                android:thicknessRatio="1.9">
                <com.facebook.login.widget.ProfilePictureView
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imgRecyclerviewExcerciseAvata"

                    android:src="@drawable/capture"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </com.facebook.login.widget.ProfilePictureView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtRecyclerviewExcerciseDateName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="Minh Tuáº¥n"
                    android:textColor="@color/text"
                    android:textStyle="bold"
                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/walk_press"
                        android:layout_height="30dp"></ImageView>
                    <TextView
                        android:id="@+id/txtRecyclerviewExcerciseDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity=""
                        android:text="May 15, 2020 at 4:53 PM"></TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/txtRecyclerviewExcerciseNoon"
            android:layout_width="match_parent"
            android:text="Afternoon Run"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_margin="@dimen/TextWorldTime"
            android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Distance"
                    android:layout_margin="3dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/txtRecyclerviewExcerciseDistance"
                    android:layout_width="wrap_content"
                    android:text="0.0 km"
                    android:textSize="20dp"
                    android:layout_margin="3dp"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout

                android:layout_width="1dp"
                android:background="@color/LineBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pace"
                    android:layout_margin="3dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/txtRecyclerviewExcercisePace"
                    android:layout_width="wrap_content"
                    android:text="0s/Km"
                    android:textSize="20dp"
                    android:layout_margin="3dp"

                    android:textColor="@color/text"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="1dp"
                android:background="@color/LineBackground"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time"
                    android:layout_margin="3dp"
                    android:textSize="10dp"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/txtRecyclerviewExcerciseTime"
                    android:layout_width="wrap_content"
                    android:text="0h 0m"
                    android:textSize="20dp"
                    android:textColor="@color/text"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imgRecyclerviewExcerciseMap"
                android:layout_width="wrap_content"
                android:src="@drawable/map1"
                android:layout_height="350dp"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/iconColorLike"
            android:layout_height="50dp">
            <ImageView
                android:layout_margin="@dimen/TextSteps"
                android:id="@+id/imgLike1"
                android:layout_weight="1"
                android:background="@color/iconColorLike"
                android:src="@drawable/like"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:layout_margin="@dimen/TextSteps"
                android:id="@+id/imgComment1"
                android:layout_weight="1"
                android:background="@color/iconColorLike"
                android:src="@drawable/comment"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
            <ImageView
                android:layout_margin="@dimen/TextSteps"
                android:id="@+id/imgShare1"
                android:layout_weight="1"
                android:background="@color/iconColorLike"
                android:src="@drawable/share"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
